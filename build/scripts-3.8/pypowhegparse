#!python
import argparse
import pytopdrawer
import numpy as np
from smpl import plot


def __main__():
	parser = argparse.ArgumentParser()
	parser.add_argument("folder", type=str,help="url/file/string")
	args = parser.parse_args()
	tops = pytopdrawer.read(args.folder)
	for t in tops:
		plot.data(t.xdata(),np.gradient(t.ydata()) ,fmt="-",grid=False)
		t.show()

__main__()